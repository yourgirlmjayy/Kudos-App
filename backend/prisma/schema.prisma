generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id  Int @id @default(autoincrement()) @unique
  title String
  category String
  author  String?
  imgUrl  String
  createdAt DateTime @default(now()) 
  card Card[]
}

model Card {
  id Int @id @default(autoincrement()) @unique
  title String
  Description String
  imgUrl  String
  author String?
  upvotes Int @default(0)
  boardId     Int    //represents id of board
  board       Board  @relation(fields: [boardId], references: [id], onDelete: Cascade) 
}